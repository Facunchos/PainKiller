@model IEnumerable<PainKillerWeb.Models.Main.Habilidad>

@{
    ViewData["Title"] = "Habilidades";
}

<div class="row">
    <div class="col-4 d-flex justify-content-start align-content-center">
        <h1 class="goingMedievalG">Lista de Habilidades</h1>
    </div>
    <div class="col-6"> </div>
    <div class="col-2 d-flex justify-content-end">
        <a asp-action="Create" class="btn btn-outline-dark botonDetalles m-2">Crear Habilidad</a>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-2 "> </div>
    <div class="col-8 ">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            @foreach (var item in Model)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelHab-@item.id">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelHabOpen-@item.id" aria-expanded="false" aria-controls="panelHabOpen-@item.id">
                            @item.nombre
                        </button>
                    </h2>
                    <div id="panelHabOpen-@item.id" class="accordion-collapse collapse" aria-labelledby="panelHab-@item.id">
                        <div class="accordion-body row">

                            <div class="col-1"></div>
                            <div class="col-3 d-flex justify-content-md-start">
                                <strong>@Html.DisplayNameFor(model => model.atributo)</strong>: @Html.DisplayFor(modelItem => item.atributo.nombre)
                            </div>

                            <div class="col-6 d-flex"> </div>
                            <div class="col-2 d-flex d-flex justify-content-end">

                                <button type="button" class="btn btn-outline-dark dropdown-toggle" style="margin-left: 6px; margin-right: 6px" data-bs-toggle="dropdown" aria-expanded="false">
                                    Opciones
                                </button>
                                <ul class="dropdown-menu">
                                    <li> <a asp-action="Details" asp-route-id="@item.id" class="dropdown-item">Detalles</a> </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button type="button" class="dropdown-item bg-danger" style="color: white" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.id">
                                            Eliminar
                                        </button>
                                    </li>

                                </ul>

                                <div class="modal fade" id="deleteModal-@item.id" tabindex="-1" aria-labelledby="deleteModal-@item.id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5 goingMedievalG"> Confirmar Eliminacion de Personaje</h1>
                                            </div>
                                            <div class="modal-body">
                                                <p> estas seguro que deseas eliminar la habilidad "@item.nombre" </p>
                                                <p><strong> no habra vuelta atras </strong></p>
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-controller="Habilidades" asp-action="Delete" asp-route-id="@item.id">
                                                    <input type="hidden" asp-for="@item.id" />
                                                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>







    </div>
    <div class="col-2 "> </div>

</div>





