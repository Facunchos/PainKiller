@model PainKillerWeb.Models.Main.Personaje

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Details";
}

<div>
    <div class="row">
        <div class="col-4 d-flex justify-content-start align-content-center">
            <h4 class="goingMedievalG">Detalles de Personaje</h4>
        </div>
        <div class="col-6"> </div>
        <div class="col-2 d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-outline-dark botonDetalles" >Editar Personaje</a>
        </div>
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.raza)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.raza.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.expActual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.expActual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.expGastada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.expGastada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vidaMax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vidaMax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.manaMax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.manaMax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.energiaMax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.energiaMax)
        </dd>
    </dl>
</div>
<div>
    <div class="row">
        <div class="col-4 d-flex justify-content-start align-content-center">
            <h4 class="goingMedievalG">Atributos Del Personaje</h4>
        </div>
        <div class="col-6"> </div>
        <div class="col-2 d-flex justify-content-end">
            <a asp-controller="AtributosDePersonajes" asp-action="EditAll" asp-route-id="@Model.id" class="btn btn-outline-dark botonDetalles">Editar Atributos</a>
        </div>
    </div>
    <hr />
    <dl class="row">
        @foreach (var item in Model.atributos)
        {
            if (item.atributoId == Model.raza.idAtributoRelevante || item.atributoId == Model.raza.idAtributoRelevante2)
            {
                <dt class="col-sm-2" style="color:#14C12C">
                    @item.atributo.nombre
                </dt>
            }
            else if (item.atributoId == Model.raza.idAtributoPesimo)
            {
                <dt class="col-sm-2" style="color: #BE1E1E">
                    @item.atributo.nombre
                </dt>
            }
            else
            {
                <dt class="col-sm-2">
                    @item.atributo.nombre
                </dt>
            }

            <dd class="col-sm-10">
                @item.nivel
            </dd>

        }
    </dl>
</div>
<div>
    <div class="row">
        <div class="col-4 d-flex justify-content-start align-bottom">
            <h4 class="goingMedievalG">Habilidades Del Personaje</h4>
        </div>
        <div class="col-6"> </div>
        <div class="col-2 d-flex justify-content-end">
            <a asp-controller="HabilidadesDePersonajes" asp-action="CreateFor" asp-route-id="@Model.id" class="btn btn-outline-dark botonDetalles">Agregar Habilidad</a>
        </div>
    </div>
    <hr />
    <dl class="row">
        @foreach (var item in Model.habilidades)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(modelItem => item.Habilidad.nombre)
            </dt>


            <dd class="col-sm-1">
                @Html.DisplayFor(modelItem => item.Nivel)
            </dd>

            <dd class="col-sm-7">
            </dd>

            <div class="col-sm-2 btn-group mt-1 d-flex justify-content-end" role="group" aria-label="Button group with nested dropdown">

                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Opciones
                    </button>
                    <ul class="dropdown-menu">
                        <li><a asp-controller="HabilidadesDePersonajes" asp-action="Edit" asp-route-id="@item.id" class="dropdown-item">Editar</a>
                        <li><a asp-controller="HabilidadesDePersonajes" asp-action="Details" asp-route-id="@item.id" class="dropdown-item">Detalles</a>
                        <li><a asp-controller="HabilidadesDePersonajes" asp-action="Delete" asp-route-id="@item.id" class="dropdown-item">Eliminar</a>
                    </ul>
                </div>
            </div>


        }
    </dl>
    
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
