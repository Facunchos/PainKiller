@model PainKillerWeb.Models.Main.Personaje

@{
    ViewData["Title"] = "Create";
}

<h2 class="goingMedievalG">Creacion De Personaje</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" onsubmit=false></div>

            <div class="form-floating mb-3">
                <input asp-for="nombre" class="form-control" placeholder=1 id="nombre" />
                <label asp-for="nombre"></label>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="razaId" class="form-select" aria-label="Floating label select example" asp-items="ViewBag.razaId"></select>
                <label asp-for="razaId" class="control-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="expActual" class="form-control" placeholder=1 />
                <label asp-for="expActual"></label>
                <span asp-validation-for="expActual" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear Personaje" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
