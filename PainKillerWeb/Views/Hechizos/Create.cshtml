@model PainKillerWeb.Models.Main.Hechizo

@{
    ViewData["Title"] = "Hechizo";
}

<h1 class="fuenteMedieval">Creacion de Hechizo</h1>

<hr />
<div class="fuenteMedieval">
    <form asp-action="Create" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating col-3">
            <input asp-for="nombre" class="form-control" />
            <label asp-for="nombre" class="control-label"></label>
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>
        <div class="form-floating col-3">
            <select asp-for="distanciaId" class="form-control" asp-items="ViewBag.distanciaId"></select>
            <label asp-for="distanciaId" class="control-label"></label>
        </div>
        <div class="form-floating col-3">
            <select asp-for="elementoId" class="form-control" asp-items="ViewBag.elementoId"></select>
            <label asp-for="elementoId" class="control-label"></label>
        </div>
        <div class="form-floating col-3">
            <select asp-for="tipoCoste" class="form-control">
                <option value="1">VIDA</option>
                <option value="2">MANA</option>
                <option value="3">ENERGIA</option>
            </select>
            <label asp-for="tipoCoste" class="control-label"></label>
            <span asp-validation-for="tipoCoste" class="text-danger"></span>
        </div>
        <div class="form-floating col-sm-12">
            <br />
        </div>
        <div class="form-floating col-sm-6">
            <input asp-for="duracion" class="form-control" />
            <label asp-for="duracion" class="control-label"></label>
            <span asp-validation-for="duracion" class="text-danger"></span>
        </div>
        <div class="form-floating col-sm-6">
            <input asp-for="costeExp" class="form-control" />
            <label asp-for="costeExp" class="control-label"></label>
            <span asp-validation-for="costeExp" class="text-danger"></span>
        </div>
        <div class="form-floating col-sm-12">
            <br />
        </div>

        <div class="form-floating col-sm-6">
            <input asp-for="costeUso" class="form-control" />
            <label asp-for="costeUso" class="control-label"></label>
            <span asp-validation-for="costeUso" class="text-danger"></span>
        </div>
        <div class="form-floating col-sm-6">
            <input asp-for="tiempo" class="form-control" />
            <label asp-for="tiempo" class="control-label"></label>
            <span asp-validation-for="tiempo" class="text-danger"></span>
        </div>
        <div class="form-floating col-sm-12">
            <br />
        </div>

        <div class="form-floating col-sm-12">
            <textarea asp-for="efecto" class="form-control"></textarea>
            <label asp-for="efecto" class="control-label"></label>
            <span asp-validation-for="efecto" class="text-danger"></span>
        </div>
        <div class="form-floating col-sm-12">
            <br />
        </div>

        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-dark" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger mt-2 btn-sm">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
