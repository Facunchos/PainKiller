@model PainKillerWeb.Models.Pivot.AtributoDePersonaje

@{
    ViewData["Title"] = "Crear Atributos";
}

<h2 class="fuenteMedieval800">Creacion De Atributos de Personaje</h2>
<hr />

<div class="col-md-4">
    <form asp-action="CreateAll">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div>
            @{int i = 0;}
            @foreach (var item in ViewBag.atributos)
            {
                <div class="form-group">
                    <input type="hidden" asp-for="personajeId" name="[@i].personajeId" value=@ViewBag.personajeId ] />
                    <input type="hidden" asp-for="atributoId" name="[@i].atributoId" value=@item.id />

                </div>
                <div class="form-floating mb-3">
                    <input type="number" range="" asp-for="nivel" name="[@i].nivel" class="form-control" placeholder=1 value="0"/>
                    <label asp-for="nivel">@item.nombre</label>
                </div>
                <span class="invisible">
                    @(i++)
                </span>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Crear Atributos" class="btn btn-dark" />
        </div>



    </form>
</div>

<div>
    <a asp-controller="Personajes" asp-action="Index" class="btn btn-outline-danger mt-2 btn-sm">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
