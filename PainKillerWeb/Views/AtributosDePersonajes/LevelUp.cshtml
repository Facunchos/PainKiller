@model PainKillerWeb.Models.Pivot.AtributoDePersonaje

@{
    ViewData["Title"] = "Subir Nivel De Atributo";
    int i = Model.nivel + 1;
}

<h2 class="fuenteMedieval800">Subir Atributo de Nivel</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <p class="fuenteMedieval800">Estas seguro que deseas subir de nivel el atributo "@Model.atributo.nombre" del personaje @Model.personaje.nombre </p>
        <p class="fuenteMedieval800"><strong>Tendra un costo de @ViewBag.costo puntos de Experiencia </strong></p>

        <form asp-action="LevelUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" asp-for="id" />
                <input type="hidden" asp-for="personajeId" />
                <input type="hidden" asp-for="atributoId" />

                <input type="hidden" asp-for="nivel" class="form-control" value="@i" />
            </div>

            @if (ViewBag.posible)
            {
                <div class="form-group">
                    <input type="submit" value="Subir A Nivel @i" class="btn btn-success" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Subir A Nivel @i" class="btn btn-success " disabled />
                </div>
                <span class="text-danger"><strong>Experiencia</strong> Insuficiente </span>

            }





        </form>
    </div>
</div>

<div>
    <a asp-controller="Personajes" asp-action="Details" asp-route-id="@Model.personajeId" class="btn btn-outline-danger mt-2 btn-sm">Regresar</a>
</div>

@*@section Scripts {*@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

