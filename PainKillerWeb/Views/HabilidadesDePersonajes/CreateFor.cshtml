@model PainKillerWeb.Models.Pivot.HabilidadDePersonaje

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>HabilidadDePersonaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="personajeId" value=@ViewData["personajeId"] />
            </div>
            <div class="form-group">
                <label asp-for="HabilidadId" class="control-label"></label>
                <select asp-for="HabilidadId" class="form-control" asp-items="ViewBag.HabilidadId"></select>
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Nivel" value="1" />
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar Habilidad" class="btn btn-dark" />
            </div>
            <div>
                <a asp-controller="Personajes" asp-action="Details" asp-route-id="@ViewData["personajeId"]" class="btn btn-outline-danger mt-2 btn-sm">Regresar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4"> </div>
    <div class="col-md-4 accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                    Info
                </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    para agregar una <strong>Habilidad</strong> es necesario gastar 2 puntos de experincia. las habilidades se creaen en nivel 1
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
